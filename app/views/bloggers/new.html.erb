<h1> New Blogger </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p style="color: red"> <%= error %> </p>
<% end %>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :bio %>
<%= f.text_field :bio %><br>
<%= f.label :age %>
<%= f.number_field :age %><br>
<%= f.submit %>
<% end %>